{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "removeComments": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["**/*.ts"],
    "exclude": ["./node_modules"]
  }
  